<div class="card">
  <h2>Edit Item</h2>
  
  {{#if error}}
    <div class="message error">{{error}}</div>
  {{/if}}

  <form method="POST" action="/edit/{{item.id}}" style="margin-top: 20px;">
    <div class="form-row">
      <div class="form-group">
        <label for="name">Nama Item <span style="color: red;">*</span></label>
        <input type="text" id="name" name="name" required placeholder="Contoh: Laptop" value="{{item.name}}">
      </div>
      <div class="form-group">
        <label for="category">Kategori</label>
        <select id="category" name="category">
          <option value="">Pilih Kategori</option>
          <option value="Elektronik" {{#if (eq item.category 'Elektronik')}}selected{{/if}}>Elektronik</option>
          <option value="Furniture" {{#if (eq item.category 'Furniture')}}selected{{/if}}>Furniture</option>
          <option value="Stationery" {{#if (eq item.category 'Stationery')}}selected{{/if}}>Alat Tulis</option>
          <option value="Lainnya" {{#if (eq item.category 'Lainnya')}}selected{{/if}}>Lainnya</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label for="description">Deskripsi</label>
      <textarea id="description" name="description" placeholder="Masukkan deskripsi item...">{{item.description}}</textarea>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="quantity">Jumlah Stok <span style="color: red;">*</span></label>
        <input type="number" id="quantity" name="quantity" required min="0" placeholder="0" value="{{item.quantity}}">
      </div>
      <div class="form-group">
        <label for="price">Harga (Rp) <span style="color: red;">*</span></label>
        <input type="number" id="price" name="price" required min="0" step="0.01" placeholder="0" value="{{item.price}}">
      </div>
    </div>

    <div style="display: flex; gap: 10px; margin-top: 30px;">
      <button type="submit" class="btn btn-success">Update Item</button>
      <a href="/" class="btn" style="background: var(--gray); color: white;">Batal</a>
    </div>
  </form>
</div>